/* pages/billing/billing.wxss */
.picker-wrapper {
  z-index: 1000;
  display: none;
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 0;
  left: 0;
}

.picker-wrapper.activated {
  display: block;
}

.picker-wrapper .picker-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.3);
  opacity: 0;
}

.picker-wrapper .picker-content {
  position: absolute;
  width: 100%;
  height: 260px;
  left: 0;
  bottom: -260px;
  background-color: rgb(255,255,255); 
}

.picker-action {
  text-align: center;
  padding: 15px;
}

.picker-action .weui-btn {
  font-size: 14px;
}

.picker-wrapper .picker-content picker-view {
  padding: 0 10px;
  height: 200px;
}

.picker-wrapper .picker-content picker-view picker-view-column view {
  padding: 0 10px;
  line-height: 35px;
}

.weui-select {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}